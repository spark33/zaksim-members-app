<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= @member.errors.count %>개 문제가 있었습니다:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :name, placeholder: "이름" %>
    <%= f.text_field :phone, placeholder: "전화번호" %>
    <%= f.text_field :email, placeholder: "이메일" %>
    <%= f.text_field :school, placeholder: "학교" %>
    <%= f.select :gender, collection: Member::GENDERS %>
    <br><%= f.label "생년월일" %><br>
    <%= f.date_select :birthdate, :start_year=>1900,:end_year=>Date.current.year, :selected=>1990 %>
    <%= f.label "특이사항" %><br>
    <%= f.text_area :comment, placeholder: "" %>
    <%= f.submit "회원 저장", class:"button" %>
  </div>
<% end %>
