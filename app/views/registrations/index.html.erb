<div class="index-view">
  <h1>현재 등록된 회원 리스트</h1>

  <div class="index-commands">
    <%= link_to 'registrations.csv', class:"button" do %>
      <%= fa_icon "download" %> CSV 다운로드
    <% end %>
  </div>

  <table class="index-table">
    <thead>
      <tr>
        <th>회원</th>
        <th>자리 번호</th>
        <th>등록 날짜</th>
        <th>마감 날짜</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td><%= link_to Member.find(registration.member_id).name, member_path(registration.member_id) %></td>
          <td><%= registration.seat_number %></td>
          <td><%= registration.start_date %></td>
          <td><%= registration.end_date %></td>
          <td><%= link_to '등록 정보 수정하기', edit_registration_path(registration) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>