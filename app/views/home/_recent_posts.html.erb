<% @recent_nonadmin_posts.each do |p| %>
	<div class="post">
		<h4><%= p.employee.name %></h4>
		<small>
			<%= p.created_at.strftime("%Y/%m/%d - %H:%M") %>
		</small>
		<p><%= p.content %></p>
		<% if can? :edit, p %>
			<div class="post-commands">
				<%= link_to edit_post_path(p) do %>
					<%= fa_icon "pencil" %>
				<% end %> |
				<%= link_to p, method: :delete, data: { confirm: '이 게시글을 지우시겠습니까?' } do %>
					<%= fa_icon "times	" %>
				<% end %>
			</div>
		<% end %>
	</div>
<% end %>