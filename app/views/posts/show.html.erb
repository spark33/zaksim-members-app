<p>
  <strong>올린 시간:</strong>
  <%= @post.created_at.strftime("%Y/%m/%d - %H:%M") %>
</p>

<p>
  <strong>내용:</strong>
  <pre><%= @post.content %></pre>
</p>

<p>
  <strong>올린 이:</strong>
  <%= Employee.find(@post.employee_id).name %>
</p>
<% if can? :edit, @post %>
	<%= link_to '수정하기', edit_post_path(@post) %> |
	<%= link_to '지우기', @post, method: :delete, data: { confirm: '이 게시글을 지우시겠습니까?' } %>
<% end %>
